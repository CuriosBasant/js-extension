{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ESNext", "dom"],
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true
  }
}
